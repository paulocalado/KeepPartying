<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cardProdutos"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            >

            <TextView
                android:id="@+id/txtNomeProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp" />
            <TextView
                android:id="@+id/txtValorProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/txtNomeProduto"
                android:layout_alignStart="@+id/txtNomeProduto" />

            <ImageView
                android:id="@+id/imgProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_toLeftOf="@+id/txtValorProduto"
                android:layout_toStartOf="@+id/txtValorProduto"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />
            <Button
                android:id="@+id/btnFazerPedidoLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="Adicionar aos Pedidos"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
